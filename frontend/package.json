{
  "name": "bovitrack",
  "version": "2.0.1",
  "description": "Livestock Management Application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "dotenv -e ../.env -- electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ag-grid-community": "^31.3.2",
    "chart.js": "^4.4.3",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.bovitrack",
    "productName": "BoviTrack",
    "files": [
      "main.js",
      "index.html",
      "styles.css",
      "js/**/*",
      "pages/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend_django/dist/bovitrack_backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon/bovitrack_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
